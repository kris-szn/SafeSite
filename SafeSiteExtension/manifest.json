{
    "manifest_version": 2,
    "name": "__MSG_ExtensionName__",
    "version": "0.1",
    "description": "__MSG_ExtensionDescription__",
    "content_security_policy": "default-src 'self'",
    "default_locale": "en",
    "icons": {
        "16": "img/safeSite16.png",
        "48": "img/safeSite48.png",
        "128": "img/safeSite128.png"
    },
    "page_action": {
        "default_title": "Safe Site",
        "default_icon": {
            "19": "img/unknown/default19.png",
            "38": "img/unknown/default38.png",
        },
        "default_popup": "html/popup.html"
    },
    "background": {
        "scripts": [
            "src/background/safeSites.js",
            "src/background/safeSitesUtils.js",
            "src/background/backgroundEventsHandlers.js",
            "src/background/popupEventsHandlers.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}